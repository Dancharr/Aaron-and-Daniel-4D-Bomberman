package game;

import java.awt.*;
import java.awt.event.*;
import java.awt.image.*;
import java.io.File;
import java.io.IOException;
import javax.imageio.ImageIO;
/*
This is the playing field game state
*/

public class GameState extends GameStateTemplate{

    private Player playerOne, playerTwo;
    private Tile[] t;
    private BufferedImage unbreakableSprite;
    private static int [][] grid = new int[16][14]; //0 = nothing, 1 = breakable, 2 = unbreakable

    public static boolean collision(Point p, Tile t){
        return t.contains(p);
    }

    public GameState(GameStateManager gsm){
        super(gsm);
    }

    public void init(){
        playerOne = new Player(0, 0, 1);
        playerTwo = new Player(500, 500, 2);
        try{
            unbreakableSprite = ImageIO.read(new File("unbreakable.jpg"));
        }
        catch(IOException e){
            
        }
        grid = new int[14][16];
        for (int i = 1; i <=13; i++){
            for (int j = 1; j <=15; j++){
                if (i == 1||j == 1||i == 13||j == 15||(i%2 == 1 && j%2 == 1)){
                    grid[i][j]=2;
                }
                else{
                    int n = (int)Math.ceil(Math.random()*5);
                    grid[i][j]=n==1?0:1;
                }
                System.out.print(grid[i][j]+" ");
            }
            System.out.println();
        }
        grid[12][2]=0;
        grid[2][14]=0;
        
    }

    public void tick(){
        playerOne.tick();
        playerTwo.tick();
    }

    public void draw(Graphics g){
        playerOne.draw(g);
        playerTwo.draw(g);
        g.drawImage(unbreakableSprite, 0, 0, null);
        for (int i = 1; i<=13; i++){
            for  (int j = 1; j<=15; j++){
                if(grid[i][j]==2){
                    g.drawImage(unbreakableSprite, (j-1)*50, (i-1)*50, null);
                }
            }
        }
    }

    public void keyPressed(int k){
        playerOne.keyPressed(k);
        playerTwo.keyPressed(k);
        if(k == KeyEvent.VK_P) gsm.states.push(new PauseState(gsm));
    }

    public void keyReleased(int k) {
        playerOne.keyReleased(k);
        playerTwo.keyReleased(k);
    }
}
